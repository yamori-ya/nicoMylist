{
  "name": "nyMylist",
  "version": "0.9.1.1",
  "description": "ニコニコ動画、Youtubeのマイリスト拡張",
  "manifest_version": 2,

  "browser_action": {
    "default_title": "nyMylist",
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_popup": "html/pop.html"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "content_scripts": [{
    "js": ["js/SheetApi.js", "js/function.js", "js/content.js"],
    "css": ["css/content.css"],
    "matches": [
      "http://*.nicovideo.jp/watch/*",
      "https://*.nicovideo.jp/watch/*",
      "https://www.youtube.com/watch*"
    ]
  }],

  "options_ui": {
    "page": "html/option.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["js/function.js", "js/SheetApi.js", "event.js"],
    "persistent": false
  },

  "permissions": [
    "identity",
    "storage",
    "unlimitedStorage",
    "tabs"
  ],
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "key": ""
}